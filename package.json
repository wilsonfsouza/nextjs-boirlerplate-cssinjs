{
  "name": "boilerplate",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "eslint": "eslint src --max-warnings=0",
    "test": "jest",
    "test:watch": "yarn test --watch"
